<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/update/<%= customer.id %>" method="POST">
          <input
            type="text"
            name="nombre"
            value="<%= customer.nombre %>"
            placeholder="Nombre"
            class="form-control mb-3"
            autofocus
          />
          <input
            type="text"
            name="telefono"
            value="<%= customer.telefono%>"
            placeholder="Telefono"
            class="form-control mb-3"
          />
          <input
            type="text"
            name="empresa"
            value="<%= customer.empresa%>"
            placeholder="Empresa"
            class="form-control mb-3"
          />
          

          <button type="submit" class="btn btn-info">save customer</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
